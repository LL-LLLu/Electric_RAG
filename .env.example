# Database (Railway provides this automatically when you add PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/electrical_rag

# LLM Provider - choose "gemini" or "anthropic"
LLM_PROVIDER=gemini
GEMINI_API_KEY=your-gemini-api-key
# ANTHROPIC_API_KEY=sk-ant-xxxxx (if using Anthropic/Claude)

# Application
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-secret-key-here

# Storage (Railway provides persistent volumes)
UPLOAD_DIR=/app/uploads
CHROMA_DIR=/app/chroma_data

# OCR Settings
OCR_LANGUAGE=en
OCR_DPI=300

# Frontend (set this to your backend Railway URL)
VITE_API_URL=https://your-backend.railway.app
