# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/electrical_rag

# LLM Provider - choose "gemini" or "anthropic"
LLM_PROVIDER=gemini
GEMINI_API_KEY=your-gemini-api-key
# ANTHROPIC_API_KEY=sk-ant-xxxxx (if using Anthropic/Claude)

# Authentication - set to protect API endpoints (leave empty for dev)
API_SECRET_KEY=

# CORS - comma-separated allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Application
ENVIRONMENT=development
DEBUG=true

# Storage
UPLOAD_DIR=/app/uploads

# OCR Settings
OCR_LANGUAGE=en
OCR_DPI=300

# Frontend env vars (set as Docker build args)
# VITE_API_URL=https://your-backend.onrender.com
# VITE_API_KEY=your-api-secret-key
